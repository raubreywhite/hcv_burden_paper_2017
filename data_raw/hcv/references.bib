	year = {2004},
	pmid = {14681338},
	keywords = {Adolescent, Adult, Aged, Age Distribution, Child, Child, Preschool, Epidemiologic Studies, Female, Hepatitis C, Humans, Infant, Male, Middle Aged, Prevalence, World Health Organization},
