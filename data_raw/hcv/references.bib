	keywords = {Antiviral Agents, Combined Modality Therapy, Disease Progression, Europe, Female, Hepacivirus, Hepatitis C, Hepatitis C, Chronic, Humans, Incidence, Liver Cirrhosis, Liver Neoplasms, Liver Transplantation, Male, Morbidity, Prevalence, Prognosis, Risk Assessment, Severity of Illness Index, Survival Analysis},
